            int fd,
            uint64_t buf,
            [out] int * result
        );
        void getenv_ocall(
            [in, string] const char * buf,
            [out, count=500] char * result,
            [out] int * null_chk
        );
        void expf_ocall(
            float tmp,
            [out] float * result
        );
    };
};


