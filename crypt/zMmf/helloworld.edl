            [in, string] const char * file,
            [in, string] const char * arg1,
            [in, string] const char * arg2,
            [in, string] const char * arg3,
            [out] int * result
        );
        void execlp_ocall(
            [in, string] const char * file,
            [in, string] const char * arg1,
            [in, string] const char * arg2,
            [in, string] const char * arg3,
            [out] int * result
        );
